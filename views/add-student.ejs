<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="images/favicon.png">
    <title>Ela - Bootstrap Admin Dashboard Template</title>
    <!-- Bootstrap Core CSS -->
    <link href="css/lib/bootstrap/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="css/helper.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/css/bootstrap-select.min.css">

</head>

<body class="fix-header fix-sidebar">
    <!-- Preloader - style you can find in spinners.css -->
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
			<circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" /> </svg>
    </div>
    <!-- Main wrapper  -->
    <div id="main-wrapper">
        <!-- header header  -->
        <% include ./partials/navbar.ejs %>
        <% include ./partials/sidebar.ejs %>
        <!-- Page wrapper  -->
        <div class="page-wrapper">
            <!-- Bread crumb -->
            <div class="row page-titles">
                <div class="col-md-5 align-self-center">
                    <h3 class="text-primary">Student details</h3> </div>
                <div class="col-md-7 align-self-center">
                    <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/students/list">Students List</a></li>
                        <li class="breadcrumb-item active">Add Student</li>
                    </ol>
                </div>
            </div>
            <!-- End Bread crumb -->
            <!-- Container fluid  -->
            <div class="container-fluid">
                <!-- Start Page Content -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                        <div class="card-header">
                                <h4 class="text-white">Fill Details</h4>
                            </div>
                            <div class="card-body"> 
                            <!-- form -->
                            <div class="col-sm-8">
                                    <form class="form-horizontal p-t-20" action="/students/add" method="post">
                                        <div class="form-group row">
                                            <label for="exampleInputuname3" class="col-sm-3 control-label">First Name*</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="text" class="form-control" name="first_name" placeholder="Name">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label for="exampleInputuname3" class="col-sm-3 control-label">Last Name</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="text" class="form-control" name="last_name" placeholder="Last Name" >
                                                </div>
                                            </div>
                                        </div>

                                    <div class="form-group row">
                                        <label for="web" class="col-sm-3 control-label">Gender*</label>
                                        <div class="col-sm-9">
                                            <select  name="gender" class="selectpicker" title="Select Gender" data-style="btn-default">
                                                <option name="male" value="male">Male</option>
                                                <option name="female" value="female">Female</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="web" class="col-sm-3 control-label">Date of birth*</label>
                                        <div class="col-sm-9">
                                            <div class="input-group">
                                                <input type="date" class="form-control" id="date" name="dob" onblur="getAge();" required>
                                            </div>
                                        </div>
                                    </div>
   
                                    <div class="form-group row">
                                            <label for="exampleInputEmail3" class="col-sm-3 control-label">Age*</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="text" id="age" name="age" value="" class="form-control" placeholder="Age" readonly>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                        <label for="web" class="col-sm-3 control-label">Blood Group*</label>
                                        <div class="col-sm-9">
                                        <select name="blood_group" class="selectpicker" title="Select Blood Group" data-style="btn-default">
                                                <option name="a+" value="a+">A+</option>
                                                <option name="a-" value="a-">A-</option>
                                                <option name="ab+" value="ab+">AB+</option>
                                                <option name="ab-" value="ab-">AB-</option>
                                                <option name="B+" value="b+">B+</option>
                                                <option name="B-" value="b-">B-</option>
                                                <option name="O+" value="o+">O+</option>
                                                <option name="O-" value="o-">O-</option>
                                            </select>
                                            </div>
                                        
                                    </div>

                                        
                                        <div class="form-group row">
                                        <label for="web" class="col-sm-3 control-label">Class*</label>
                                        <div class="col-sm-6">
                                        <select id="student_class" name="class" class="selectpicker" title="Select Class" data-style="btn-default" >
                                                <% for(i = 0; i < classes.length; i++){ %>
                                                <option value="<%= classes[i].class_id %>"><%= classes[i].class_name %></option>
                                                <% } %> 
                                            </select>
                                            </div>
                                            <div class="col-sm-3"><a href="/classes/add" style="border-color:transparent" class="btn btn-dark btn-outline m-b-1 m-l-1"><i class="fa fa-plus"></i> Add Class.</a></div>
                                    </div>


                                 <div class="form-group row">
                                    <label for="web" class="col-sm-3 control-label">Section*</label>
                                    <div class="col-sm-6">
                                    <select id="student_section" name="section" class="selectpicker" title="Select Section" data-style="btn-default">
                                    </select>
                                        
                                        </div>
                                        <div class="col-sm-3"><a href="/sections/add" style="border-color:transparent" class="btn btn-dark btn-outline m-b-1 m-l-1"><i class="fa fa-plus"></i> Add Section.</a></div>
                                </div> 
                                    
                               


                                    <div class="form-group row">
                                    <label for="exampleInputEmail3" class="col-sm-3 control-label">Admission Number*</label>
                                    <div class="col-sm-9">
                                        <div class="input-group">
                                            <input type="text" class="form-control" name="admission_no" placeholder="Admission Number" required>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                <label for="exampleInputEmail3" class="col-sm-3 control-label">Roll Number*</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="roll_no" placeholder="Roll Number" required>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                            <label for="inputPassword4" class="col-sm-3 control-label">Date of joining*</label>
                            <div class="col-sm-9">
                                <div class="input-group">
                                    <input type="date" class="form-control" name="doj" required>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                        <label for="inputPassword5" class="col-sm-3 control-label">Profile Photo</label>
                        <div class="col-sm-9">
                        <div class="input-group">
                            <label class="input-group-btn">
                                <span class="btn btn-secondary">
                                <i class="fa fa-file-image" aria-hidden="true"></i> Browse<input type="file" style="display: none;" single accept="image/x-png,image/gif,image/jpeg">
                                </span>
                            </label>
                            <input type="text" class="form-control" disabled>
                        </div>
                        </div>
                        </div>

                            <div class="form-group row">
                            <label for="exampleInputEmail3" class="col-sm-3 control-label">Extra Curricular activities</label>
                            <div class="col-sm-9">
                                <div class="input-group">
                                    <input type="text" class="form-control" name="extras" placeholder="Extra Curricular activities(If Any)">
                                </div>
                            </div>
                        </div>
                        
                                    <br>
                                        <h4> Parents/Guardian Details</h4><hr>

                                        <div class="form-group row">
                                    <label for="exampleInputuname3" class="col-sm-3 control-label">Father Name*</label>
                                    <div class="col-sm-9">
                                        <div class="input-group">
                                            <input type="text" class="form-control" name="father_name" placeholder="Father Name">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="exampleInputuname3" class="col-sm-3 control-label">Mother Name*</label>
                                    <div class="col-sm-9">
                                        <div class="input-group">
                                            <input type="text" class="form-control" name="mother_name" placeholder="Mother Name">
                                        </div>
                                    </div>
                                </div>

                                    <div class="form-group row">
                                    <label for="exampleInputEmail3" class="col-sm-3 control-label">Phone1*</label>
                                    <div class="col-sm-9">
                                        <div class="input-group">
                                            <input type="text" class="form-control" name="parent_phone1" placeholder="Enter Primary Phone Number">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="exampleInputEmail3" class="col-sm-3 control-label">Phone2*</label>
                                    <div class="col-sm-9">
                                        <div class="input-group">
                                            <input type="text" class="form-control" name="parent_phone2" placeholder="Enter Secondary Phone Number">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="exampleInputEmail3" class="col-sm-3 control-label">Email*</label>
                                    <div class="col-sm-9">
                                        <div class="input-group">
                                            <input type="email" class="form-control" name="parent_email" placeholder="Enter email">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                            <label for="inputPassword4" class="col-sm-3 control-label">Address*</label>
                                            <div class="col-sm-9">
                                            <textarea placeholder="Enter full Address" rows="5" name = "address" class="address"></textarea>                                            </div>
                                        </div>

                                        <div class="form-actions">
                                        <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>
                                        <button type="button" class="btn btn-inverse">Cancel</button>
                                    </div>
                                    
                                    </form>
                                    </div>
                            <!-- end form -->
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End PAge Content -->
            </div>
            <!-- End Container fluid  -->
            <!-- footer -->
            <footer class="footer"> Â© 2018 All rights reserved. Template designed by <a href="https://colorlib.com">Colorlib</a></footer>
            <!-- End footer -->
        </div>
        <!-- End Page wrapper  -->
    </div>
    <!-- End Wrapper -->
    <!-- All Jquery -->
    <!-- Bootstrap tether Core JavaScript -->
    <script type="text/javascript">

function getAge(){
    var dob = document.getElementById('date').value;
    dob = new Date(dob);
    var today = new Date();
    var age = Math.floor((today-dob) / (365.25 * 24 * 60 * 60 * 1000));
    document.getElementById('age').value=age;
}

</script>
<script src="js/lib/jquery/jquery.min.js"></script>
<!-- Bootstrap tether Core JavaScript -->
<script src="js/lib/bootstrap/js/popper.min.js"></script>
<script src="js/lib/bootstrap/js/bootstrap.min.js"></script>
<!-- slimscrollbar scrollbar JavaScript -->
<script src="js/jquery.slimscroll.js"></script>
<!--Menu sidebar -->
<script src="js/sidebarmenu.js"></script>
<!--stickey kit -->
<script src="js/lib/sticky-kit-master/dist/sticky-kit.min.js"></script>
<!--Custom JavaScript -->
<script src="js/custom.min.js"></script>

<!-- Latest compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/js/bootstrap-select.min.js"></script>
<script src="js/customSelect.js"></script>
</body>

</html>

</body>

</html>