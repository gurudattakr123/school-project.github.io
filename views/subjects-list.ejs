<body class="fix-header fix-sidebar">
    <!-- Preloader - style you can find in spinners.css -->
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
			<circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" /> </svg>
    </div>
    <!-- Main wrapper  -->
    <div id="main-wrapper">
        <!-- header header  -->
        <% include ./partials/navbar.ejs %>
        <% include ./partials/sidebar.ejs %>
        <!-- Page wrapper  -->
        <div class="page-wrapper">
            <!-- Bread crumb -->
            <div class="row page-titles">
                <div class="col-md-5 align-self-center">
                    <h3 class="text-primary">Subjects</h3> </div>
                <div class="col-md-7 align-self-center">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">Subjects List</li>
                    </ol>
                </div>
            </div>
            <!-- End Bread crumb -->
            <!-- Container fluid  -->
            <div class="container-fluid">
                <!-- Start Page Content -->
                <div class="row">
                    <div class="col-lg-12">
                    <div class="col-3"><button style="border-color:transparent" class="btn btn-dark btn-outline m-b-1 m-l-2 hideButton"><i class="fa fa-plus"></i> Add Subject.</button></div>
                        <!--if condition apply here-->
                        <div class="row">
                    <div class="col-lg-12">
                        <div class="card showForm" style="display:none">
                            <div class="card-body"> 
                            <!-- form -->
                            <div class="col-sm-8">
                                    <form class="form-horizontal p-t-20" method="POST" action="/subjects/update_subjects">
                                    
                                    
                                    <div class="form-group row">
                                            <label for="exampleInputuname3" class="col-sm-3 control-label">Select Class*</label>
                                            <div class="col-sm-9">
                                            <div class="custom-select">
                                            <select name="class" required>
                                                                <option name="" value="class">Class</option>
                                                                <% for(i = 0; i < classes.length; i++){ %>
                                                                <option value="<%= classes[i].class_id %>"><%= classes[i].class_name %></option>
                                                                <% } %> 
                                                            </select>
                                            </div>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label for="exampleInputuname3" class="col-sm-3 control-label">Name of the subject*</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                <input type="text" value="" data-role="tagsinput" multiple name="subjects" placeholder="Enter Subject Names (You can enter multiple subjects here)" class="form-control" />
                                                </div>
                                            </div>
                                        </div>

                                    <div class="form-actions">
                                        <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>
                                        <button type="button" class="btn btn-inverse hideForm">Cancel</button>
                                    </div>
                                    
                                    </form>
                                    </div>
                                    
                            <!-- end form -->
                            </div> <br><br>
                            <div class="info noteStyle">
                            <p><strong>INFO!</strong><ul><li>Multiple subjects can be entered here!</li><br><li>Enter all the subjects at a time. </li></ul></p>
                            </div>
                            </div>
                            
                            </div>
                            </div>
                            
                        <!-- end of card div -->
                            </div>

                        </div>
                    </div>
                </div>
                <!-- End PAge Content -->
            </div>
            <!-- End Container fluid  -->
            <!-- footer -->
            <footer class="footer"> Â© 2018 All rights reserved. Template designed by <a href="https://colorlib.com">Colorlib</a></footer>
            <!-- End footer -->
        </div>
        <!-- End Page wrapper  -->
    </div>
